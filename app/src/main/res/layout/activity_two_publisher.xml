<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/s">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/url_publisher1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.98"
                        android:inputType="textUri"
                        android:labelFor="@id/url_publisher"
                        android:text="@string/url_publisher"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/state_publisher1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <SurfaceView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:id="@+id/surfaceView_publisher1" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinner_video_capture1"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                        <Spinner
                            android:id="@+id/spinner_audio_capture1"
                            android:layout_width="match_parent"
                            android:layout_height="36dp" />

                        <ImageButton
                            android:layout_width="37dp"
                            android:layout_height="36dp"
                            android:id="@+id/button_publisher_play1"
                            android:src="@android:drawable/ic_media_play"
                            android:contentDescription="@null"/>

                        <ImageButton
                            android:id="@+id/button_publisher_stop1"
                            android:layout_width="36dp"
                            android:layout_height="40dp"
                            android:contentDescription="@null"
                            android:src="@android:drawable/ic_media_pause" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="97dp">

                            <Spinner
                                android:id="@+id/spinner_video_resolution1"
                                android:layout_width="match_parent"
                                android:layout_height="32dp" />

                            <Spinner
                                android:id="@+id/spinner_audio_samplerate1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/spinner_publish_media_mode1" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <CheckBox
                                android:id="@+id/check_publisher_aecm1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="true"
                                android:text="@string/aec" />

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/hw_encode"
                                android:id="@+id/check_publisher_hw_encoder1"
                                android:checked="true" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/url_publisher2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.98"
                        android:inputType="textUri"
                        android:labelFor="@id/url_publisher"
                        android:text="@string/url_publisher"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/state_publisher2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <SurfaceView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:id="@+id/surfaceView_publisher2" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinner_video_capture2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                        <Spinner
                            android:id="@+id/spinner_audio_capture2"
                            android:layout_width="match_parent"
                            android:layout_height="36dp" />

                        <ImageButton
                            android:layout_width="37dp"
                            android:layout_height="36dp"
                            android:id="@+id/button_publisher_play2"
                            android:src="@android:drawable/ic_media_play"
                            android:contentDescription="@null"/>

                        <ImageButton
                            android:id="@+id/button_publisher_stop2"
                            android:layout_width="36dp"
                            android:layout_height="40dp"
                            android:contentDescription="@null"
                            android:src="@android:drawable/ic_media_pause" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="97dp">

                            <Spinner
                                android:id="@+id/spinner_video_resolution2"
                                android:layout_width="match_parent"
                                android:layout_height="32dp" />

                            <Spinner
                                android:id="@+id/spinner_audio_samplerate2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/spinner_publish_media_mode2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <CheckBox
                                android:id="@+id/check_publisher_aecm2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="true"
                                android:text="@string/aec" />

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/hw_encode"
                                android:id="@+id/check_publisher_hw_encoder2"
                                android:checked="true" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
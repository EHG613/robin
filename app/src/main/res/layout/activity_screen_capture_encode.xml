<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/s">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/url_player"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/url_player"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_player_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/state"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.76"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_player_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button_player_stop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="stop"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button_player_full_screen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/full_screen"
                        android:textSize="12sp" />
                </LinearLayout>

                <SurfaceView
                    android:id="@+id/surfaceView_player"
                    android:layout_width="271dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/url_publisher"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/url_publisher"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_publisher_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/state"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_publisher_width_display"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:gravity="center"
                            android:text="width" />

                        <EditText
                            android:id="@+id/editText_publisher_width"
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_publisher_height_display"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3.54"
                            android:gravity="center"
                            android:text="height" />

                        <EditText
                            android:id="@+id/editText_publisher_height"
                            android:layout_width="103dp"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_publisher_fps_display"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.00"
                            android:gravity="center"
                            android:text="fps" />

                        <EditText
                            android:id="@+id/editText_publisher_fps"
                            android:layout_width="84dp"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_publisher_bitrate_display"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.00"
                            android:gravity="center"
                            android:text="bitrate" />

                        <EditText
                            android:id="@+id/editText_publisher_bitrate"
                            android:layout_width="84dp"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_screen_capture"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:text="Projection"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_publisher_start"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="Start"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_publisher_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Stop"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>